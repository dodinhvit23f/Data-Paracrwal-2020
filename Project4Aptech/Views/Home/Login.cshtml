
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<form action="/Home/Login" method="post">
    <div class="container">
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" value="@ViewBag.usn" name="usn" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" value="@ViewBag.pwd" name="pwd" required>
        <button type="submit">Login</button>
    </div>
    <div class="container" style="background-color:#f1f1f1">
        <button type="button" class="cancelbtn">Cancel</button>
    </div>
    @ViewBag.err
</form>
