@model Project4Aptech.Models.Account

@{
    ViewBag.Title = "ChuyenTien";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var id = ViewBag.id;
}

<h2>ChuyenTien</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Account</h4>
    <hr />
    <input type="hidden" name="idSend" value="@id"/>
    <div class="form-group">
        Nhap so tien: <input type="number" name="money" />
        <strong>@ViewBag.statusBalance</strong>
    </div>
    <div class="form-group">
        Nhap tai khoan nhan: <input type="number" name="idReceiver" />
    </div>
    <div class="form-group">
        Nhap message: <input type="text" name="mess" />
    </div>
    <div class="form-group">
        Nhap OTP: <input type="text" name="OTP" />
        <strong>@ViewBag.statusOTP</strong>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
